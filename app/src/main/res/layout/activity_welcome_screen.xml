<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD500"
    tools:context=".activity.CadastroActivity"
    tools:menu="@tools:sample/avatars">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradientebar"
                android:navigationIcon="@android:drawable/ic_menu_myplaces"
                android:title="BEM-VINDO"
                android:titleTextColor="#FFFFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- drawable/bot_o_tarde.xml -->

    <TextView
        android:id="@+id/textView2"
        android:layout_width="379dp"
        android:layout_height="291dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/alata"
        android:gravity="center_horizontal"
        android:text="Olá abelhinha! Esse é um ambiente virtual dinâmico para facilitar a consulta de horários, acompanhamento de aulas e participação em eventos.!"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

    <Button
        android:id="@+id/Tarde"
        android:layout_width="268dp"
        android:layout_height="63dp"
        android:layout_marginTop="344dp"
        android:background="@drawable/botaobrown"
        android:backgroundTint="#FF5A2601"
        android:onClick="TelaTarde"
        android:text="TURMA EXT TARDE"
        android:textColorLink="#FF5A2601"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        app:strokeColor="#FF5A2601"
        app:backgroundTint="@null"/>

    <Button
        android:id="@+id/Noite"
        android:layout_width="264dp"
        android:layout_height="58dp"
        android:layout_marginTop="436dp"
        android:background="@drawable/botaobrown"
        android:onClick="TelaNoite"
        android:text="TURMA EXT NOITE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        app:backgroundTint="@null"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="319dp"
        android:layout_height="148dp"
        android:layout_marginTop="520dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        app:srcCompat="@drawable/barry" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="120dp"
        android:layout_height="77dp"
        android:layout_marginTop="264dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        app:srcCompat="@drawable/img" />

</androidx.constraintlayout.widget.ConstraintLayout>