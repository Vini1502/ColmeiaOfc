        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.ColmeiaOfc"
        tools:targetApi="31">
        <activity
            android:name=".activity.Contatos"
            android:exported="false" />
